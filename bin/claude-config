#!/bin/bash

# Coder Config - Standalone CLI wrapper
# Place this in ~/bin or anywhere in your PATH

CLAUDE_CONFIG_LOADER="${CLAUDE_CONFIG_LOADER:-$HOME/.claude-config/config-loader.js}"

if [[ ! -f "$CLAUDE_CONFIG_LOADER" ]]; then
  echo "Error: config-loader.js not found at $CLAUDE_CONFIG_LOADER"
  echo "Run install.sh first or set CLAUDE_CONFIG_LOADER environment variable"
  exit 1
fi

exec node "$CLAUDE_CONFIG_LOADER" "$@"
