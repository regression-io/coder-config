{
  "name": "@regression-io/claude-config",
  "version": "0.22.9",
  "description": "Configuration management UI for Claude Code and Antigravity - manage MCPs, rules, commands, memory, and project folders",
  "author": "regression.io",
  "main": "config-loader.js",
  "type": "commonjs",
  "bin": {
    "claude-config": "cli.js"
  },
  "scripts": {
    "start": "node cli.js ui",
    "display": "node cli.js display",
    "ui": "node cli.js ui",
    "ui:dev": "cd ui && npm run dev",
    "ui:build": "cd ui && npm run build",
    "version:sync": "node scripts/sync-version.js",
    "version:bump": "node scripts/sync-version.js --bump",
    "build": "npm run version:bump && cd ui && npm install && npm run build",
    "build:ci": "cd ui && npm install && npm run build",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "test": "node --test test/*.test.js",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "antigravity",
    "gemini",
    "configuration",
    "mcp",
    "model-context-protocol",
    "project-management",
    "cli"
  ],
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.1",
    "node-pty": "^1.1.0",
    "ws": "^8.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/regression-io/claude-config.git"
  },
  "bugs": {
    "url": "https://github.com/regression-io/claude-config/issues"
  },
  "homepage": "https://github.com/regression-io/claude-config#readme",
  "files": [
    "cli.js",
    "config-loader.js",
    "ui/server.cjs",
    "ui/terminal-server.cjs",
    "ui/dist/**",
    "templates/**",
    "shared/**",
    "scripts/**",
    "README.md"
  ]
}
